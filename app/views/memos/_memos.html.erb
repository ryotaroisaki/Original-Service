<ul class="media-list">
  <% memos.each do |memo| %>
    
     
      <div class="text-center">
        <div>
          <%= link_to memo.trick, user_path(memo.user) %>
        </div>
        <div>
          <p><%= memo.content %></p>
        </div>
        <div>  
         <% if current_user == memo.user %>
            <%= link_to "Delete", memo, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        <%= link_to 'このトリックを編集する', edit_memo_path(memo) %>  
        </div>    
      </div>
  
  <% end %>
  <%= paginate memos %>
</ul>