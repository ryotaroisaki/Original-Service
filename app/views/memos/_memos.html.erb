<ul class="media-list">
  <% memos.each do |memo| %>
    
     
      <div class="text-center">
        <div class= "memo">
          <%= link_to memo.trick, user_path(memo.user) %>
        </div>
        <div class= details>
          <p><%= memo.content %></p>
        </div>
        <div class= details>  
         <% if current_user == memo.user %>
           
            
            <%= link_to memo, method: :delete, data: { confirm: "You sure?" } do %><span class="glyphicon glyphicon-trash color-black" style="font-size: 30px"></span><% end %>
      
            
            
          <% end %>
        <%= link_to 'EDIT', edit_memo_path(memo) %>  
        </div>    
      </div>
  
  <% end %>
  <%= paginate memos %>
</ul>