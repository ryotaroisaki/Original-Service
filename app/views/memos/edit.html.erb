
<div class="main users-edit">
  <div class="container">
    <div class="form-heading text-center"><%= @memo.trick %> の編集ページ</div>
    <div class="form users-form">
      <div class="form-body">
        <% @memo.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>


        <%= form_for(@memo) do |f| %>
          <%= f.label :trick, 'トリック' %>
          <%= f.text_field :trick %>

          <%= f.label :content, 'コツ' %>
          <%= f.text_field :content %>

          <%= f.submit '更新' %>
        <% end %>

        <%= link_to '戻る', current_user %>

      </div>
    </div>
  </div>
</div>
