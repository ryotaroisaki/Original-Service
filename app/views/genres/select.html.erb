<div class= "text-center">
    <h1>選択したジャンル: <%= @genre.name %></h1>
</div>

<div class="row">
    <div class="col-xs-12 col-lg-offset-3 col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">トリックを新規作成</div>
            <div class="panel-body">
                <%= form_for(@trick, url: trickcreate_genre_path(@genre.id)) do |f| %>

                <% if @trick.errors.any? %>
                  <div class="alert alert-warning">
                    <div id="error_explanation">
                      <ul>
                        <% @trick.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                <% end %>

                <div class="form-group">
                    <%= f.label :name, 'トリック名' %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="text-right">
                    <%= f.submit '追加する', class: 'btn btn-success btn-block' %>
                </div>
                <% end %>
                    <%= link_to option_path do %><span class="glyphicon glyphicon-chevron-left"　aria-hidden="true">戻る</span><% end %>
            </div>
        </div>
    </div>
</div>
