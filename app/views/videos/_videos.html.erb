<div class="hidden-xs">

<ul class="media-list">
     
     <% videos.each do |video| %>
     <%#= video.inspect %>
    
      <div class="text-center">
        
         <div>
          <iframe width="560" height="315" src="<%= video.iframe_url.html_safe %>;modestbranding=1;end=7;rel=0&autoplay=0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen"></iframe>
        </div>
        <div>
        <%= render 'favorites/like_button', video: video %>
        </div>
  
        <div class= "details">
          <p><%= video.trick %></p>
        </div>
        
         <div class= "details">
          <p><%= video.skater %></p>
        </div>
        
         <div class= "details">
          <p><%= video.instagram_url %></p>
        </div>
        
         <div class= "details">
          <p><%= video.video_url %></p>
        </div>
       </div>
       <% end %>
       
</ul>

</div>

<div class="visible-xs">

     <ul class="media-list">
      
     <% videos.each do |video| %>
     <%#= video.inspect %>
    
      <div class="text-center">
        <div>
          <iframe width="100%" height="194" src="<%= video.iframe_url.html_safe %>"></iframe>
        </div>
         <div>
        <%= render 'favorites/like_button', video: video %>
        </div>
  
        <div class= "details">
          <p><%= video.trick %></p>
        </div>
         <div class= "details">
          <p><%= video.skater %></p>
        </div>
         <div class= "details">
          <p><%= video.instagram_url %></p>
        </div>
         <div class= "details">
          <p><%= video.video_url %></p>
        </div>
       </div>
      
      <% end %>
    </ul>
    
</div>